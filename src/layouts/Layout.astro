---
const { bgColor, fgColor, title, description, canonical, themeColor } = Astro.props as {
  bgColor?: string;
  fgColor?: string;
  title?: string;
  description?: string;
  canonical?: string;
  themeColor?: string;
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ?? "homegame.today"}</title>
    {description && <meta name="description" content={description} />}
    {canonical && <link rel="canonical" href={canonical} />}
    {themeColor && <meta name="theme-color" content={themeColor} />}
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title ?? "homegame.today"} />
    {description && <meta property="og:description" content={description} />}
    {canonical && <meta property="og:url" content={canonical} />}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title ?? "homegame.today"} />
    {description && <meta name="twitter:description" content={description} />}
  </head>
  <body class="font-sans container m-auto" style={`background:${bgColor ?? "white"};color:${fgColor ?? "inherit"}`}>
    <slot />
  </body>
</html>
